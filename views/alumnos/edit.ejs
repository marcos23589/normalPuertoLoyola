
        <% if (edicion) { %>
            <div class="container w-50">
                <form class="row" action="/edit/<%= edicion._id %>" method="POST">
                    <!-------------------DATOS DEL ALUMNO------------------>
                    <legend>Datos del alumno</legend>
                    <div class="input-group mb-3">
                        <span class="input-group-text">Apellido y Nombres</span>
                        <input type="text" input value="<%= edicion.apellido %>" class="form-control" placeholder="Pérez" name="apellido" />
                        <input type="text" input value="<%= edicion.nombre %>" class="form-control" placeholder="Juan" name="nombre" />
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text">Lugar de nacimiento</span>
                        <input type="text" input value="<%= edicion.lugarNacimiento %>" class="form-control" placeholder="Río Gallegos, Santa Cruz"
                            aria-label="nacimiento" name="lugarNacimiento" />
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text">DNI</span>
                        <input type="number" input value="<%= edicion.documento %>" class="form-control text-center" placeholder="99.999.999" aria-label="documento"
                            name="documento" />
                        <span class="input-group-text">Fecha Nacimiento</span>
                        <input type="date" input value="<%= datos.fecha %>" class="form-control" placeholder="12/04/2009" aria-label="nacimiento"
                            name="nacimiento" />                  
                    </div>                    
                    <!-------------------LIBRO MATRIZ Y LEGAJO------------------>
                    <legend>Libro Matriz y Legajo</legend>
                    <div class="input-group mb-3">
                        <span class="input-group-text">Libro</span>
                        <input type="number" value="<%= libroMatriz.numeroLibro %>" 
                        class="form-control" name="numeroLibro" min="1" max="260" />
                        <span class="input-group-text">Folio</span>
                        <input type="number" value="<%= libroMatriz.folioLibro %>" 
                        class="form-control" name="folioLibro" min="1" max="260" />
                        <span class="input-group-text">Legajo</span>
                        <input type="number" value="<%= libroMatriz.numeroLegajo %>" 
                        class="form-control" name="numeroLegajo" />
                        <span class="input-group-text">Año</span>
                        <input type="number" value="<%= libroMatriz.anioLegajo %>"
                        class="form-control" name="anioLegajo" />
                        <!------------- CURSO ------------------>
                        <span class="input-group-text">Curso</span>
                        <select class="form-control text-center" name="curso">
                            <option selected><%= datos.curso %></option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>                            
                            <option value="5">5</option>
                        </select>
                        <span class="input-group-text">División</span>
                        <select class="form-control text-center" name="division">
                            <option selected ><%= datos.division %></option>
                            <option value="A">A</option>
                            <option value="B">B</option>
                            <option value="C">C</option>
                            <option value="D">D</option>
                            <option value="E">E</option>
                            <option value="F">F</option>
                        </select>
                    </div>
                    <!-------------------HISTORIAL------------------>
                    <legend>Historial</legend>
                    <div class="input-group mb-3">
                        <span class="input-group-text">Colegio de origen</span>
                        <input type="text" value="<%= historial.colegioOrigen %>" 
                        class="form-control" placeholder="CPES N°37" name="colegioOrigen" />
                        <span class="input-group-text">Fecha de Ingreso</span>
                        <input type="date" value="<%= historial.ingreso %>"
                        class="form-control" placeholder="dd/mm/yyyy" name="ingreso" />
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text">Colegio de Destino</span>
                        <input type="text" value="<%= historial.colegioDestino %>"
                        class="form-control" placeholder="Domingo Savio" name="colegioDestino" />
                        <span class="input-group-text">Fecha de salida</span>
                        <input type="date" value="<%= historial.fechaSalida %>"
                        class="form-control" placeholder="dd/mm/yyyy" name="fechaSalida" />
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text">Situación</span>
                        <input type="text" value="<%= historial.situacion %>"
                        class="form-control" name="situacion" />
                        <span class="input-group-text">Fecha de egreso</span>
                        <input type="date" value="<%= historial.fechaEgreso %>"
                        class="form-control" placeholder="dd/mm/yyyy" name="fechaEgreso" />
                    </div>
                    <!-------------------OBSERVACIONES------------------>
                    <div class="input-group mb-3">                        
                        <legend>Observaciones</legend>
                        <textarea class="form-control" name="observaciones" rows="3">
                            <%= historial.observaciones %></textarea>
                    </div>
                    <div class="form-group d-grid gap-2">
                        <button class="btn btn-primary">Guardar edición</button>
                    </div>
                </form>
            </div>
            <% } %>