    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">
                        <%- vista.apellido %>, <%- vista.nombre %>
                    </h3>
                    <hr>
                    <p class="card-text">D.N.I. N° <%- vista.dni %>
                    </p>
                    <p class="card-text">Situación de revista: <%- vista.revista %>
                    </p>
                    <p class="card-text">email: <%- vista.correo %>
                    </p>
                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                        <a href="/listarpersonajes" class="btn btn-primary">Volver</a>
