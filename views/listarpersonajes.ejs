<div class="container p-4">
    <table class="table table-hover table-sm caption-top align-middle">
        <div class="caption">
            <h3>Lista de agentes</h3>
        </div>
        <% if(resultado !="") {%>
            <thead>
                <tr>
                    <th scope="col">Apellido</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Documento</th>
                    <th scope="col">Revista</th>
                    <th scope="col">e-mail</th>
                </tr>
            </thead>
            <tbody>
                <% resultado.forEach(function(resultado){ %>
                    <tr>
                        <th scope="row">
                            <%- resultado.apellido %>
                        </th>
                        <td>
                            <%- resultado.nombre %>
                        </td>
                        <td>
                            <%- resultado.dni %>
                        </td>
                        <td>
                            <%- resultado.revista %>
                        </td>
                        <td>
                            <%- resultado.correo %>
                        </td>

                        <td>
                            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                <a href="/view/<%- resultado._id %>" class="btn btn-primary">Ver</a>
                                <a href="/edit/<%- resultado._id %>" class="btn btn-secondary">Editar</a>
                                <a href="/delete/<%- resultado._id %>" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                    <% }) %>
        <% }else{ %>
                    <div class="col-md-4 mx-auto">
                    <div class="card card-body text-center">
                        <h4>No hay agentes inscriptos.</h4>
                        </div>
                    </div>
                <% } %>
            </tbody>
    </table>
    <a role="button" class="btn btn-primary btn-lg" href="/crearPersonaje">Agregar agente</a>
</div>